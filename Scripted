node{
  stage('SCM'){
  git branch: 'release', url: 'https://github.com/shivardy0692/finn.git'
  }
  stage('Maven Package'){
  def MvnHome = tool name: 'MAVEN', type: 'maven'
  sh "${MvnHome}/bin/mvn package"
  }
  stage('Deployment'){
  sh "scp -o StrictHostKeyChecking=no target/finn.war tomcat/tomcat@172.31.10.54:/home/tomcat/tomcat/webapps"
  }
}
